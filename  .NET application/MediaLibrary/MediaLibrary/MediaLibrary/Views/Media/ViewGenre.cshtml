@model ControllerLayer.DTOCollection.Genre

@{
    ViewBag.Title = "ViewGenre";
}

<h2>ViewGenre</h2>

<div class="container">

    <div class="table-responsive">
        <table class="table">
            <tr>
                <th>Genre ID</th>
                <th>Name</th>
                <th>Delete</th>
            </tr>
            @foreach (var eachGen in ViewBag.genre)
            {
                <tr>
                    <td>@eachGen.GID</td>
                    <td>@eachGen.GenreName</td>
                    <td>@Html.ActionLink("Delete", "DeleteGenre", "Media", new { GID = eachGen.GID, GenreDTO = Model }, new { @class = "btn btn-primary" })</td>
                </tr>
            }
        </table>
        <h2>Add new Genre</h2>
        @using (Html.BeginForm("InsertGenre", "Media", FormMethod.Post, new { @class = "form-inline" }))
        {
            <div class="form-group">
                @Html.LabelFor(m => m.GenreName)
                @Html.TextBoxFor(m => m.GenreName, new { @class = "form-control", @placeholder = "Genre Name" })
            </div>
            <input type="submit" value="Add Genre" class="btn btn-primary" style="margin-top:25px;" />
        }
        <h2>Update Genre</h2>
        @using (Html.BeginForm("UpdateGenre", "Media", FormMethod.Post))
        {
            <div class="form-group">
                @Html.LabelFor(m => m.GID)
                @Html.TextBoxFor(m => m.GID, new { @class = "form-control", @placeholder = "Genre ID" })
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.GenreName)
                @Html.TextBoxFor(m => m.GenreName, new { @class = "form-control", @placeholder = "Genre Name" })
            </div>
            <input type="submit" value="Update" class="btn btn-primary" />
        }
    </div>
</div>